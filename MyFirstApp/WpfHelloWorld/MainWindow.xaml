<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Height="265" Width="293">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*" />
            <ColumnDefinition Width="270*" />
        </Grid.ColumnDefinitions>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="0,36,0,0" Name="textBoxShowHello" VerticalAlignment="Top" Width="234" Grid.Column="1" TextChanged="textBoxShowHello_TextChanged" />
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="0,96,0,0" Name="buttonSayHello" VerticalAlignment="Top" Width="234" Grid.Column="1" Click="buttonSayHello_Click" />
    </Grid>
</Window>
